{% comment %}
AI Plugin Theme Extension Block
This block connects to your AI service to generate or display AI-generated content.
{% endcomment %}

<div id="ai-generator-block" class="ai-plugin">
  <h3>{{ block.settings.heading }}</h3>
  <p>{{ block.settings.description }}</p>

  <form id="ai-generator-form">
    <input type="text" name="prompt" placeholder="Describe what you want to generate" required>
    <button type="submit" class="ai-generate-button">
      {{ block.settings.button_label }}
    </button>
  </form>

  <div id="ai-output" class="ai-output"></div>
</div>

<style>
  .ai-plugin {
    padding: 1rem;
    background: #f6f6f6;
    border-radius: 12px;
    text-align: center;
  }
  .ai-plugin h3 {
    margin-bottom: 0.5rem;
  }
  .ai-plugin input {
    padding: 0.5rem;
    width: 70%;
    margin-bottom: 0.5rem;
    border-radius: 8px;
    border: 1px solid #ddd;
  }
  .ai-plugin button {
    background-color: #1a73e8;
    color: white;
    border: none;
    border-radius: 8px;
    padding: 0.6rem 1.2rem;
    cursor: pointer;
  }
  .ai-output img {
    margin-top: 1rem;
    max-width: 100%;
    border-radius: 12px;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const form = document.getElementById('ai-generator-form');
    const output = document.getElementById('ai-output');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const prompt = form.prompt.value.trim();
      if (!prompt) return;

      output.innerHTML = '<p>Generating image...</p>';

      try {
        const response = await fetch('https://api.ardix.ai/generate', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ prompt }),
        });

        const data = await response.json();
        output.innerHTML = `<img src="${data.image_url}" alt="AI Generated Image">`;
      } catch (err) {
        output.innerHTML = `<p style="color:red;">Error generating image. Try again.</p>`;
      }
    });
  });
</script>
